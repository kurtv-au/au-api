# ========================================
# MULTI-DATABASE CONFIGURATION
# ========================================

# Intelligent Database (MSSQL) - Main system database
DB_INTELLIGENT_SERVER=localhost
DB_INTELLIGENT_PORT=1433
DB_INTELLIGENT_DATABASE=intelligent
DB_INTELLIGENT_USER=your_username
DB_INTELLIGENT_PASSWORD=your_password
DB_INTELLIGENT_ENCRYPT=false
DB_INTELLIGENT_ENABLED=true

# Unity Logger Database (MSSQL) - Logging system
# Inherits server/port/credentials from Intelligent if not specified
DB_UNITY_LOGGER_DATABASE=unity_logger
# DB_UNITY_LOGGER_SERVER=localhost  # Optional, inherits from INTELLIGENT
# DB_UNITY_LOGGER_PORT=1433          # Optional, inherits from INTELLIGENT
# DB_UNITY_LOGGER_USER=username      # Optional, inherits from INTELLIGENT
# DB_UNITY_LOGGER_PASSWORD=password  # Optional, inherits from INTELLIGENT
DB_UNITY_LOGGER_ENABLED=true

# MDR Database (MSSQL) - Future implementation
# Inherits server/port/credentials from Intelligent if not specified
DB_MDR_DATABASE=mdr
DB_MDR_ENABLED=false  # Set to true when ready to use

# Absentee Database (MySQL)
DB_ABSENTEE_HOST=localhost
DB_ABSENTEE_PORT=3306
DB_ABSENTEE_DATABASE=absentee
DB_ABSENTEE_USER=mysql_user
DB_ABSENTEE_PASSWORD=mysql_password
DB_ABSENTEE_ENABLED=true

# Engage Database (PostgreSQL) - Future implementation
DB_ENGAGE_HOST=localhost
DB_ENGAGE_PORT=5432
DB_ENGAGE_DATABASE=engage
DB_ENGAGE_USER=postgres_user
DB_ENGAGE_PASSWORD=postgres_password
DB_ENGAGE_SSL=false
DB_ENGAGE_ENABLED=false  # Set to true when ready to use

# ========================================
# LEGACY CONFIGURATION (For backward compatibility)
# ========================================

# Default SQL Server Configuration (maps to 'default' connection)
DB_SERVER=localhost
DB_PORT=1433
DB_DATABASE=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password
DB_ENCRYPT=false

# Default MySQL Configuration (maps to 'mysql' connection)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=your_mysql_database
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password

# API Authentication
API_KEY=your-secret-api-key-here

# Environment
NODE_ENV=development